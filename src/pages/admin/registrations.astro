---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Admin - Alumni Registrations">
  <section class="section">
    <div class="container-custom">
      <div class="flex justify-between items-center mb-8">
        <h1 class="text-3xl font-bold text-accent-900">Alumni Registrations</h1>
        <button id="refreshBtn" class="btn btn-outline btn-sm">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
          </svg>
          Refresh
        </button>
      </div>

      <div id="stats" class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="bg-gradient-to-br from-primary-50 to-primary-100 p-6 rounded-2xl">
          <h3 class="text-sm font-medium text-primary-700 mb-2">Total Registrations</h3>
          <p class="text-3xl font-bold text-primary-900" id="totalCount">-</p>
        </div>
        <div class="bg-gradient-to-br from-secondary-50 to-secondary-100 p-6 rounded-2xl">
          <h3 class="text-sm font-medium text-secondary-700 mb-2">Pending</h3>
          <p class="text-3xl font-bold text-secondary-900" id="pendingCount">-</p>
        </div>
        <div class="bg-gradient-to-br from-green-50 to-green-100 p-6 rounded-2xl">
          <h3 class="text-sm font-medium text-green-700 mb-2">Approved</h3>
          <p class="text-3xl font-bold text-green-900" id="approvedCount">-</p>
        </div>
      </div>

      <div id="loading" class="text-center py-12">
        <svg class="animate-spin h-12 w-12 text-primary-600 mx-auto mb-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        <p class="text-accent-600">Loading registrations...</p>
      </div>

      <div id="error" class="hidden text-center py-12">
        <div class="text-red-600 mb-4">
          <svg class="w-12 h-12 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <p class="text-lg font-semibold">Failed to load registrations</p>
          <p class="text-sm" id="errorMessage"></p>
        </div>
      </div>

      <div id="registrations" class="hidden bg-white rounded-2xl shadow-sm border border-accent-100 overflow-hidden">
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead class="bg-accent-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-accent-700 uppercase tracking-wider">Name</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-accent-700 uppercase tracking-wider">Email</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-accent-700 uppercase tracking-wider">Year</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-accent-700 uppercase tracking-wider">Faculty</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-accent-700 uppercase tracking-wider">Status</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-accent-700 uppercase tracking-wider">Date</th>
              </tr>
            </thead>
            <tbody id="tableBody" class="bg-white divide-y divide-accent-200">
              <!-- Data will be inserted here -->
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>

  <script>
    const apiKey = prompt('Enter Admin API Key:');
    
    if (!apiKey) {
      document.getElementById('loading')!.classList.add('hidden');
      document.getElementById('error')!.classList.remove('hidden');
      document.getElementById('errorMessage')!.textContent = 'API key is required';
    } else {
      loadRegistrations();
    }

    async function loadRegistrations() {
      const loading = document.getElementById('loading')!;
      const error = document.getElementById('error')!;
      const registrations = document.getElementById('registrations')!;
      
      loading.classList.remove('hidden');
      error.classList.add('hidden');
      registrations.classList.add('hidden');

      try {
        const response = await fetch('/api/register', {
          headers: {
            'Authorization': `Bearer ${apiKey}`
          }
        });

        if (!response.ok) {
          throw new Error(response.status === 401 ? 'Invalid API key' : 'Failed to fetch');
        }

        const result = await response.json();
        
        if (result.success) {
          displayRegistrations(result.data);
          loading.classList.add('hidden');
          registrations.classList.remove('hidden');
        } else {
          throw new Error(result.message);
        }
      } catch (err: any) {
        loading.classList.add('hidden');
        error.classList.remove('hidden');
        document.getElementById('errorMessage')!.textContent = err.message;
      }
    }

    function displayRegistrations(data: any[]) {
      const tableBody = document.getElementById('tableBody')!;
      const totalCount = document.getElementById('totalCount')!;
      const pendingCount = document.getElementById('pendingCount')!;
      const approvedCount = document.getElementById('approvedCount')!;

      // Update stats
      totalCount.textContent = data.length.toString();
      pendingCount.textContent = data.filter(r => r.status === 'pending').length.toString();
      approvedCount.textContent = data.filter(r => r.status === 'approved').length.toString();

      // Display table
      if (data.length === 0) {
        tableBody.innerHTML = '<tr><td colspan="6" class="px-6 py-4 text-center text-accent-500">No registrations yet</td></tr>';
        return;
      }

      tableBody.innerHTML = data.map(reg => `
        <tr class="hover:bg-accent-50">
          <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-accent-900">${reg.name}</td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-accent-600">${reg.email}</td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-accent-600">${reg.year || 'N/A'}</td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-accent-600">${reg.faculty || 'N/A'}</td>
          <td class="px-6 py-4 whitespace-nowrap">
            <span class="px-2 py-1 text-xs font-medium rounded-full ${
              reg.status === 'pending' ? 'bg-yellow-100 text-yellow-800' :
              reg.status === 'approved' ? 'bg-green-100 text-green-800' :
              'bg-gray-100 text-gray-800'
            }">
              ${reg.status}
            </span>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-accent-600">
            ${new Date(reg.created_at).toLocaleDateString()}
          </td>
        </tr>
      `).join('');
    }

    document.getElementById('refreshBtn')?.addEventListener('click', loadRegistrations);
  </script>
</Layout>