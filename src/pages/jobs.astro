---
import Layout from '../layouts/Layout.astro';
import JobBoard from '../components/JobBoard.astro';
import { getCollection } from 'astro:content';

export const prerender = true;

// Get all jobs from content collection
const jobsData = await getCollection('jobs');
const jobs = jobsData.map(entry => ({
  id: entry.data.id,
  ...entry.data,
}));

interface Props {
  experience?: string;
}

const { experience } = Astro.props as Props;

// Filter by experience level if specified
let filteredJobs = jobs;
if (experience) {
  filteredJobs = jobs.filter(job => job.experienceLevel === experience);
}

// Sort by posted date (newest first)
filteredJobs.sort((a, b) => {
  const dateA = new Date(a.posted_date).getTime();
  const dateB = new Date(b.posted_date).getTime();
  return dateB - dateA;
});
---

<Layout title="Actuarial Job Board | Alumni Portal">
  <main class="jobs-page">
    <!-- Hero Section -->
    <section class="jobs-hero">
      <div class="hero-content">
        <h1>Actuarial Career Opportunities</h1>
        <p>Discover amazing job opportunities in the actuarial field</p>
        <div class="hero-search">
          <input
            type="text"
            id="job-search"
            placeholder="Search jobs by title, company, or location..."
            class="search-input"
          />
          <button class="search-btn">Search</button>
        </div>
      </div>
    </section>

    <!-- Filter Section -->
    <section class="filters-section">
      <div class="container">
        <h2>Find Your Next Role</h2>
        <div class="filters-grid">
          <div class="filter-group">
            <label for="experience-filter">Experience Level</label>
            <select id="experience-filter" class="filter-select">
              <option value="">All Levels ({jobs.length})</option>
              <option value="entry">Entry Level ({jobs.filter(j => j.experienceLevel === 'entry').length})</option>
              <option value="mid">Mid Level ({jobs.filter(j => j.experienceLevel === 'mid').length})</option>
              <option value="senior">Senior Level ({jobs.filter(j => j.experienceLevel === 'senior').length})</option>
              <option value="executive">Executive ({jobs.filter(j => j.experienceLevel === 'executive').length})</option>
            </select>
          </div>

          <div class="filter-group">
            <label for="job-type-filter">Job Type</label>
            <select id="job-type-filter" class="filter-select">
              <option value="">All Types</option>
              <option value="full-time">Full Time</option>
              <option value="part-time">Part Time</option>
              <option value="contract">Contract</option>
              <option value="internship">Internship</option>
            </select>
          </div>

          <div class="filter-group">
            <label for="featured-filter">Show Featured Only</label>
            <input
              type="checkbox"
              id="featured-filter"
              class="filter-checkbox"
            />
          </div>
        </div>
      </div>
    </section>

    <!-- Job Board -->
    <section class="jobs-list-section">
      <div class="container">
        <div id="jobs-container">
          <JobBoard jobs={filteredJobs} />
        </div>
      </div>
    </section>

    <!-- Stats Section -->
    <section class="stats-section">
      <div class="container">
        <h2>Actuarial Market Insights</h2>
        <div class="stats-grid">
          <div class="stat-card">
            <div class="stat-number">{jobs.length}+</div>
            <div class="stat-label">Active Positions</div>
            <p>Actuarial roles across all experience levels</p>
          </div>

          <div class="stat-card">
            <div class="stat-number">$95K-$180K</div>
            <div class="stat-label">Salary Range</div>
            <p>Average actuarial compensation packages</p>
          </div>

          <div class="stat-card">
            <div class="stat-number">Top Skills</div>
            <div class="stat-label">Excel • SQL • Python • R • SAS</div>
            <p>Most in-demand technical competencies</p>
          </div>

          <div class="stat-card">
            <div class="stat-number">FSA • ASA • EA</div>
            <div class="stat-label">Key Certifications</div>
            <p>Credentials that boost your career</p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section">
      <div class="container">
        <h2>Ready to Take the Next Step?</h2>
        <p>Connect with alumni working in actuarial roles and get career guidance</p>
        <div class="cta-buttons">
          <a href="/alumni" class="btn btn-primary">Browse Alumni Directory</a>
          <a href="/contact" class="btn btn-secondary">Contact Us</a>
        </div>
      </div>
    </section>
  </main>
</Layout>

