---
import Layout from '../layouts/Layout.astro';
import JobBoard from '../components/JobBoard.astro';
import { getCollection } from 'astro:content';

export const prerender = false; // Enable SSR for dynamic filtering

// Get all jobs from content collection
const jobsData = await getCollection('jobs');
const allJobs = jobsData.map(entry => entry.data);

// Get unique locations for filter dropdown
const uniqueLocations = [...new Set(allJobs.map(job => job.location))].sort();

// Get unique companies
const uniqueCompanies = [...new Set(allJobs.map(job => job.company))].sort();

// Get unique sources
const uniqueSources = [...new Set(allJobs.map(job => job.source))].sort();

// Get query parameters for filtering
const url = new URL(Astro.request.url);
const searchQuery = url.searchParams.get('search')?.toLowerCase() || '';
const experienceFilter = url.searchParams.get('experience') || '';
const locationFilter = url.searchParams.get('location') || '';
const jobTypeFilter = url.searchParams.get('jobType') || '';
const salaryFilter = url.searchParams.get('minSalary') || '';
const sourceFilter = url.searchParams.get('source') || '';
const featuredOnly = url.searchParams.get('featured') === 'true';
const currentPage = parseInt(url.searchParams.get('page') || '1');

// Apply filters
let filteredJobs = allJobs;

// Search filter
if (searchQuery) {
  filteredJobs = filteredJobs.filter(job => {
    const searchableText = `${job.title} ${job.company} ${job.location} ${job.description}`.toLowerCase();
    return searchableText.includes(searchQuery);
  });
}

// Experience level filter
if (experienceFilter) {
  filteredJobs = filteredJobs.filter(job => job.experienceLevel === experienceFilter);
}

// Location filter
if (locationFilter) {
  filteredJobs = filteredJobs.filter(job => job.location.includes(locationFilter));
}

// Job type filter
if (jobTypeFilter) {
  filteredJobs = filteredJobs.filter(job => job.jobType === jobTypeFilter);
}

// Salary filter - FIXED
if (salaryFilter) {
  const minSalary = parseInt(salaryFilter);
  filteredJobs = filteredJobs.filter(job => {
    // Check if job has salary and if minimum salary meets the filter
    if (!job.salary || !job.salary.min) return false;
    return job.salary.min >= minSalary;
  });
}

// Source filter
if (sourceFilter) {
  filteredJobs = filteredJobs.filter(job => job.source === sourceFilter);
}

// Featured only filter
if (featuredOnly) {
  filteredJobs = filteredJobs.filter(job => job.featured);
}

// Sort by posted date (newest first)
filteredJobs.sort((a, b) => {
  const dateA = new Date(a.posted_date).getTime();
  const dateB = new Date(b.posted_date).getTime();
  return dateB - dateA;
});

// Calculate statistics
const totalJobs = allJobs.length;
const entryJobs = allJobs.filter(j => j.experienceLevel === 'entry').length;
const midJobs = allJobs.filter(j => j.experienceLevel === 'mid').length;
const seniorJobs = allJobs.filter(j => j.experienceLevel === 'senior').length;
const executiveJobs = allJobs.filter(j => j.experienceLevel === 'executive').length;

// Calculate salary statistics
const jobsWithSalary = allJobs.filter(j => j.salary && j.salary.min && j.salary.max);
const avgMinSalary = jobsWithSalary.length > 0
  ? Math.round(jobsWithSalary.reduce((sum, j) => sum + j.salary.min, 0) / jobsWithSalary.length)
  : 500000; // Default 5 LPA
const avgMaxSalary = jobsWithSalary.length > 0
  ? Math.round(jobsWithSalary.reduce((sum, j) => sum + j.salary.max, 0) / jobsWithSalary.length)
  : 1500000; // Default 15 LPA

// Get top skills
const skillCounts = new Map();
allJobs.forEach(job => {
  job.skills?.forEach(skill => {
    skillCounts.set(skill, (skillCounts.get(skill) || 0) + 1);
  });
});
const topSkills = Array.from(skillCounts.entries())
  .sort((a, b) => b[1] - a[1])
  .slice(0, 5)
  .map(([skill]) => skill);

// Get top certifications
const certCounts = new Map();
allJobs.forEach(job => {
  job.certifications?.forEach(cert => {
    certCounts.set(cert, (certCounts.get(cert) || 0) + 1);
  });
});
const topCertifications = Array.from(certCounts.entries())
  .sort((a, b) => b[1] - a[1])
  .slice(0, 3)
  .map(([cert]) => cert);
---

<Layout title="Actuarial Job Board | Alumni Portal">
  <main class="jobs-page">
    <!-- Hero Section -->
    <section class="jobs-hero">
      <div class="hero-content">
        <h1>Actuarial Career Opportunities</h1>
        <p>Discover {totalJobs}+ real job opportunities from top employers across India</p>
        
        <!-- Hero Search -->
        <form method="GET" class="hero-search">
          <div class="search-wrapper">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="search-icon">
              <circle cx="11" cy="11" r="8"></circle>
              <path d="m21 21-4.35-4.35"></path>
            </svg>
            <input
              type="text"
              name="search"
              id="job-search"
              placeholder="Search by title, company, location, or skills..."
              class="search-input"
              value={searchQuery}
            />
          </div>
          <button type="submit" class="search-btn">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="11" cy="11" r="8"></circle>
              <path d="m21 21-4.35-4.35"></path>
            </svg>
            Search
          </button>
        </form>
      </div>
    </section>

    <!-- Filters Section -->
    <section class="filters-section">
      <div class="container">
        <div class="filters-header">
          <h2>
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="4" y1="21" x2="4" y2="14"></line>
              <line x1="4" y1="10" x2="4" y2="3"></line>
              <line x1="12" y1="21" x2="12" y2="12"></line>
              <line x1="12" y1="8" x2="12" y2="3"></line>
              <line x1="20" y1="21" x2="20" y2="16"></line>
              <line x1="20" y1="12" x2="20" y2="3"></line>
              <line x1="1" y1="14" x2="7" y2="14"></line>
              <line x1="9" y1="8" x2="15" y2="8"></line>
              <line x1="17" y1="16" x2="23" y2="16"></line>
            </svg>
            Filter Jobs
          </h2>
          {(experienceFilter || locationFilter || jobTypeFilter || salaryFilter || sourceFilter || featuredOnly || searchQuery) && (
            <a href="/jobs" class="clear-filters">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="18" y1="6" x2="6" y2="18"></line>
                <line x1="6" y1="6" x2="18" y2="18"></line>
              </svg>
              Clear All Filters
            </a>
          )}
        </div>

        <form method="GET" class="filters-grid" id="filter-form">
          <!-- Preserve search query -->
          {searchQuery && <input type="hidden" name="search" value={searchQuery} />}

          <!-- Experience Level Filter -->
          <div class="filter-group">
            <label for="experience">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
              </svg>
              Experience Level
            </label>
            <select name="experience" id="experience" class="filter-select">
              <option value="">All Levels ({totalJobs})</option>
              <option value="entry" selected={experienceFilter === 'entry'}>
                Entry Level ({entryJobs})
              </option>
              <option value="mid" selected={experienceFilter === 'mid'}>
                Mid Level ({midJobs})
              </option>
              <option value="senior" selected={experienceFilter === 'senior'}>
                Senior Level ({seniorJobs})
              </option>
              <option value="executive" selected={experienceFilter === 'executive'}>
                Executive ({executiveJobs})
              </option>
            </select>
          </div>

          <!-- Location Filter -->
          <div class="filter-group">
            <label for="location">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                <circle cx="12" cy="10" r="3"></circle>
              </svg>
              Location
            </label>
            <select name="location" id="location" class="filter-select">
              <option value="">All Locations</option>
              <option value="Mumbai" selected={locationFilter === 'Mumbai'}>Mumbai</option>
              <option value="Delhi" selected={locationFilter === 'Delhi'}>Delhi/NCR</option>
              <option value="Bangalore" selected={locationFilter === 'Bangalore'}>Bangalore</option>
              <option value="Pune" selected={locationFilter === 'Pune'}>Pune</option>
              <option value="Hyderabad" selected={locationFilter === 'Hyderabad'}>Hyderabad</option>
              <option value="Chennai" selected={locationFilter === 'Chennai'}>Chennai</option>
              <option value="Kolkata" selected={locationFilter === 'Kolkata'}>Kolkata</option>
              <option value="Remote" selected={locationFilter === 'Remote'}>Remote</option>
              {uniqueLocations.map(location => (
                <option value={location} selected={locationFilter === location}>
                  {location}
                </option>
              ))}
            </select>
          </div>

          <!-- Job Type Filter -->
          <div class="filter-group">
            <label for="jobType">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="2" y="7" width="20" height="14" rx="2" ry="2"></rect>
                <path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"></path>
              </svg>
              Job Type
            </label>
            <select name="jobType" id="jobType" class="filter-select">
              <option value="">All Types</option>
              <option value="full-time" selected={jobTypeFilter === 'full-time'}>Full Time</option>
              <option value="part-time" selected={jobTypeFilter === 'part-time'}>Part Time</option>
              <option value="contract" selected={jobTypeFilter === 'contract'}>Contract</option>
              <option value="internship" selected={jobTypeFilter === 'internship'}>Internship</option>
            </select>
          </div>

          <!-- Salary Filter - FIXED with INR icon -->
          <div class="filter-group">
            <label for="minSalary">
              <!-- INR Rupee Symbol Icon -->
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M6 3h12M6 8h12m-12 5h12m-12 5h12M9 3v18m6-18v18"></path>
              </svg>
              Minimum Salary (LPA)
            </label>
            <select name="minSalary" id="minSalary" class="filter-select">
              <option value="">Any Salary</option>
              <option value="300000" selected={salaryFilter === '300000'}>₹3 LPA+</option>
              <option value="500000" selected={salaryFilter === '500000'}>₹5 LPA+</option>
              <option value="700000" selected={salaryFilter === '700000'}>₹7 LPA+</option>
              <option value="1000000" selected={salaryFilter === '1000000'}>₹10 LPA+</option>
              <option value="1500000" selected={salaryFilter === '1500000'}>₹15 LPA+</option>
              <option value="2000000" selected={salaryFilter === '2000000'}>₹20 LPA+</option>
            </select>
          </div>

          <!-- Source Filter -->
          <div class="filter-group">
            <label for="source">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
                <line x1="2" y1="12" x2="22" y2="12"></line>
                <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
              </svg>
              Source
            </label>
            <select name="source" id="source" class="filter-select">
              <option value="">All Sources</option>
              {uniqueSources.map(source => (
                <option value={source} selected={sourceFilter === source}>
                  {source}
                </option>
              ))}
            </select>
          </div>

          <!-- Featured Only -->
          <div class="filter-group">
            <label for="featured" class="checkbox-label">
              <input
                type="checkbox"
                name="featured"
                id="featured"
                value="true"
                checked={featuredOnly}
                class="filter-checkbox"
              />
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="checkbox-icon">
                <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
              </svg>
              Featured Jobs Only
            </label>
          </div>

          <!-- Submit Button -->
          <div class="filter-group filter-actions">
            <button type="submit" class="btn btn-primary">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
              Apply Filters
            </button>
          </div>
        </form>
      </div>
    </section>

    <!-- Active Filters Display -->
    {(experienceFilter || locationFilter || jobTypeFilter || salaryFilter || sourceFilter || featuredOnly) && (
      <section class="active-filters">
        <div class="container">
          <div class="active-filters-content">
            <span class="active-filters-label">Active Filters:</span>
            <div class="active-filters-list">
              {salaryFilter && (
                <span class="filter-tag">
                  Salary: ₹{(parseInt(salaryFilter) / 100000).toFixed(0)} LPA+
                  <a href={`/jobs?${new URLSearchParams(Object.fromEntries(Array.from(new URLSearchParams(url.search).entries()).filter(([k]) => k !== 'minSalary')))}`}>
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <line x1="18" y1="6" x2="6" y2="18"></line>
                      <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                  </a>
                </span>
              )}
              {/* ... other filter tags ... */}
            </div>
          </div>
        </div>
      </section>
    )}

    <!-- Job Board Section -->
    <section class="jobs-list-section">
      <div class="container">
        <JobBoard 
          jobs={filteredJobs} 
          showPagination={true}
          currentPage={currentPage}
          itemsPerPage={12}
        />
      </div>
    </section>

    <!-- Statistics Section - FIXED with INR icon -->
    <section class="stats-section">
      <div class="container">
        <h2>Actuarial Market Insights</h2>
        <div class="stats-grid">
          <!-- Total Jobs -->
          <div class="stat-card">
            <div class="stat-icon">
              <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="2" y="7" width="20" height="14" rx="2" ry="2"></rect>
                <path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"></path>
              </svg>
            </div>
            <div class="stat-number">{totalJobs}</div>
            <div class="stat-label">Active Positions</div>
            <p>Current actuarial job openings</p>
          </div>

          <!-- Salary Range - FIXED with INR icon -->
          <div class="stat-card">
            <div class="stat-icon">
              <!-- INR Rupee Symbol Icon -->
              <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M6 3h12M6 8h12m-12 5h12m-12 5h12M9 3v18m6-18v18"></path>
              </svg>
            </div>
            <div class="stat-number">
              ₹{(avgMinSalary / 100000).toFixed(1)}L - ₹{(avgMaxSalary / 100000).toFixed(1)}L
            </div>
            <div class="stat-label">Average Salary Range</div>
            <p>Typical compensation packages (per annum)</p>
          </div>

          <!-- Top Skills -->
          <div class="stat-card">
            <div class="stat-icon">
              <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="22 12 18 12 15 21 9 3 6 12 2 12"></polyline>
              </svg>
            </div>
            <div class="stat-number">Top Skills</div>
            <div class="stat-label">{topSkills.length > 0 ? topSkills.join(' • ') : 'R • Powerbi'}</div>
            <p>Most in-demand technical competencies</p>
          </div>

          <!-- Top Certifications -->
          <div class="stat-card">
            <div class="stat-icon">
              <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 10v6M2 10l10-5 10 5-10 5z"></path>
                <path d="M6 12v5c3 3 9 3 12 0v-5"></path>
              </svg>
            </div>
            <div class="stat-number">Key Certifications</div>
            <div class="stat-label">{topCertifications.length > 0 ? topCertifications.join(' • ') : 'FSA • ASA • EA'}</div>
            <p>Credentials that boost your career</p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section">
      <div class="container">
        <div class="cta-content">
          <h2>Ready to Take the Next Step?</h2>
          <p>Connect with alumni working in actuarial roles and get personalized career guidance</p>
          <div class="cta-buttons">
            <a href="/alumni/profiles" class="btn btn-primary">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                <circle cx="9" cy="7" r="4"></circle>
                <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
              </svg>
              Browse Alumni Directory
            </a>
            <a href="/contact" class="btn btn-secondary">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                <polyline points="22,6 12,13 2,6"></polyline>
              </svg>
              Contact Us
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

