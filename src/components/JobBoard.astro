---
interface Props {
  jobs?: any[];
  limit?: number;
  featured?: boolean;
  showPagination?: boolean;
  currentPage?: number;
  itemsPerPage?: number;
}

const { 
  jobs = [], 
  limit = 999, 
  featured = false,
  showPagination = false,
  currentPage = 1,
  itemsPerPage = 12
} = Astro.props;

let displayJobs = jobs;

// Filter by featured if specified
if (featured) {
  displayJobs = displayJobs.filter(job => job.featured);
}

// Apply limit
displayJobs = displayJobs.slice(0, limit);

// Pagination calculations
const totalPages = showPagination ? Math.ceil(displayJobs.length / itemsPerPage) : 1;
const startIndex = (currentPage - 1) * itemsPerPage;
const endIndex = startIndex + itemsPerPage;
const paginatedJobs = showPagination ? displayJobs.slice(startIndex, endIndex) : displayJobs;

// Helper function to format Indian salary
function formatIndianSalary(salary: any) {
  if (!salary) return null;
  
  const minLakhs = (salary.min / 100000).toFixed(1);
  const maxLakhs = (salary.max / 100000).toFixed(1);
  
  return {
    formatted: `₹${minLakhs}L - ₹${maxLakhs}L`,
    min: salary.min,
    max: salary.max,
    currency: salary.currency
  };
}
---

<div class="job-board">
  {/* Results Summary */}
  <div class="results-summary">
    <p class="text-accent-700">
      Showing <strong>{paginatedJobs.length}</strong> of <strong>{displayJobs.length}</strong> jobs
      {featured && <span class="featured-badge">Featured Only</span>}
    </p>
  </div>

  {/* Jobs Grid */}
  <div class="jobs-grid">
    {paginatedJobs.length > 0 ? (
      paginatedJobs.map((job) => {
        const salaryDisplay = job.salary ? formatIndianSalary(job.salary) : null;
        
        return (
          <article class="job-card" data-job-id={job.id}>
            {/* Featured Badge */}
            {job.featured && (
              <div class="featured-ribbon">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
                </svg>
                <span>Featured</span>
              </div>
            )}

            {/* Job Header */}
            <div class="job-header">
              <div class="job-title-section">
                <h3 class="job-title">
                  <a href={job.url} target="_blank" rel="noopener noreferrer">
                    {job.title}
                  </a>
                </h3>
                <p class="company-name">{job.company}</p>
              </div>
              <div class="job-badges">
                <span class={`badge badge-type badge-${job.jobType}`}>
                  {job.jobType}
                </span>
                <span class={`badge badge-level badge-${job.experienceLevel}`}>
                  {job.experienceLevel}
                </span>
              </div>
            </div>

            {/* Job Meta Information */}
            <div class="job-meta">
              {/* Location */}
              <div class="meta-item">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                  <circle cx="12" cy="10" r="3"></circle>
                </svg>
                <span>{job.location}</span>
              </div>

              {/* Salary - FIXED */}
              {salaryDisplay && (
                <div class="meta-item">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M6 3h12M6 8h12m-12 5h12m-12 5h12M9 3v18m6-18v18"></path>
                  </svg>
                  <span class="salary">
                    {salaryDisplay.formatted}
                  </span>
                </div>
              )}

              {/* Source */}
              <div class="meta-item">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"></circle>
                  <line x1="2" y1="12" x2="22" y2="12"></line>
                  <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
                </svg>
                <span class="source">{job.source}</span>
              </div>
            </div>

            {/* Job Description */}
            {job.description && (
              <p class="job-description">
                {job.description.length > 150 
                  ? job.description.substring(0, 150) + '...' 
                  : job.description}
              </p>
            )}

            {/* Skills Section */}
            {job.skills && job.skills.length > 0 && (
              <div class="skills-section">
                <h4>Required Skills</h4>
                <div class="skills-list">
                  {job.skills.slice(0, 4).map((skill: string) => (
                    <span class="skill-tag">{skill}</span>
                  ))}
                  {job.skills.length > 4 && (
                    <span class="skill-tag more">+{job.skills.length - 4} more</span>
                  )}
                </div>
              </div>
            )}

            {/* Certifications Section */}
            {job.certifications && job.certifications.length > 0 && (
              <div class="certifications-section">
                <h4>Certifications</h4>
                <div class="cert-list">
                  {job.certifications.map((cert: string) => (
                    <span class="cert-badge">{cert}</span>
                  ))}
                </div>
              </div>
            )}

            {/* Job Footer */}
            <div class="job-footer">
              <div class="posted-date">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"></circle>
                  <polyline points="12 6 12 12 16 14"></polyline>
                </svg>
                <span>Posted {new Date(job.posted_date).toLocaleDateString()}</span>
              </div>
              <a 
                href={job.url} 
                target="_blank" 
                rel="noopener noreferrer" 
                class="apply-btn"
                aria-label={`Apply for ${job.title} at ${job.company}`}
              >
                <span>View & Apply</span>
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                  <polyline points="15 3 21 3 21 9"></polyline>
                  <line x1="10" y1="14" x2="21" y2="3"></line>
                </svg>
              </a>
            </div>
          </article>
        );
      })
    ) : (
      <div class="no-jobs">
        <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <circle cx="12" cy="12" r="10"></circle>
          <line x1="12" y1="8" x2="12" y2="12"></line>
          <line x1="12" y1="16" x2="12.01" y2="16"></line>
        </svg>
        <h3>No Jobs Found</h3>
        <p>Try adjusting your filters or search criteria</p>
      </div>
    )}
  </div>

  {/* Pagination */}
  {showPagination && totalPages > 1 && (
    <div class="pagination">
      <button 
        class="pagination-btn"
        disabled={currentPage === 1}
        data-page={currentPage - 1}
      >
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="15 18 9 12 15 6"></polyline>
        </svg>
        Previous
      </button>

      <div class="pagination-numbers">
        {Array.from({ length: totalPages }, (_, i) => i + 1).map(page => (
          <button
            class={`pagination-number ${page === currentPage ? 'active' : ''}`}
            data-page={page}
          >
            {page}
          </button>
        ))}
      </div>

      <button 
        class="pagination-btn"
        disabled={currentPage === totalPages}
        data-page={currentPage + 1}
      >
        Next
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="9 18 15 12 9 6"></polyline>
        </svg>
      </button>
    </div>
  )}
</div>

<style>
