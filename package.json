{
  "name": "open-alumns-portal",
  "type": "module",
  "version": "0.0.1",
  "engines": {
    "node": "20.x"
  },
  "description": "A production-ready, open-source alumni portal Astro theme for colleges and communities",
  "author": "",
  "license": "MIT",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "db:setup": "node scripts/setup-mongodb.js",
    "db:migrate": "node scripts/add-new-fields.js",
    "seed": "tsx prisma/seed.ts",
    "scrape:basic": "ts-node scripts/scrape-actuarial-jobs.ts",
    "scrape:advanced": "ts-node scripts/scrape-jobs-advanced.ts",
    "scrape:import": "node scripts/import-jobs-to-mongodb.js",
    "scrape:rss": "tsx scripts/scrape-jobs-rss.ts",
    "scrape:api": "tsx scripts/scrape-jobs-api.ts",
    "scrape:mock": "node scripts/generate-mock-jobs.js",
    "scrape:jsearch": "node scripts/scrape-jobs-jsearch.js",
    "scrape:jobs": "node --loader ts-node/esm scripts/scrapeJobs.ts",
    "scrape:jobs:dev": "node --loader ts-node/esm scripts/scrapeJobs.ts --verbose",
    "scrape:jobs:schedule": "node-cron '0 2 * * *' 'npm run scrape:jobs'",
    "scrape:jobs:watch": "nodemon --exec 'npm run scrape:jobs' --watch src/utils/scrapers",
    "generate-hash": "tsx scripts/generate-hash.ts"
  },
  "dependencies": {
    "@astrojs/tailwind": "^5.0.0",
    "@astrojs/vercel": "^7.0.0",
    "@vercel/blob": "^2.0.0",
    "@vercel/postgres": "^0.10.0",
    "astro": "^4.0.0",
    "astro-icon": "^0.8.0",
    "axios": "^1.13.5",
    "cheerio": "^1.2.0",
    "dotenv": "^17.2.4",
    "fuse.js": "^7.0.0",
    "js-yaml": "^4.1.0",
    "mongodb": "^7.0.0",
    "mongoose": "^9.0.2",
    "node-fetch": "^3.3.2",
    "pg": "^8.16.3",
    "puppeteer": "^24.37.2",
    "tailwindcss": "^3.3.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.0",
    "@types/node": "^20.19.33",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "prisma": "^7.1.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "prisma": {
    "schema": "prisma/schema.prisma",
    "seed": "tsx prisma/seed.ts"
  },
  "keywords": [
    "astro",
    "alumni",
    "portal",
    "theme",
    "education",
    "community"
  ]
}
